<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.multi_reminder">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Shower"></activity>
        <activity
            android:name=".Custom"
            android:icon="@drawable/ic_settings_blackdp"
            android:label="Custom reminder" />
        <activity
            android:name=".Exercise"
            android:icon="@drawable/ic_workout"
            android:label="Workout" />
        <activity
            android:name=".Cleaning"
            android:icon="@drawable/ic_clean"
            android:label="Clean" />
        <activity
            android:name=".Hands_daily"
            android:icon="@drawable/ic_hand_wash"
            android:label="Wash hands" />
        <activity
            android:name=".Eat_daily"
            android:icon="@drawable/ic_eat"
            android:label="Eat" />
        <activity
            android:name=".Drink_daily"
            android:icon="@drawable/ic_water_glass"
            android:label="Drink Water" />
        <activity
        android:name=".MainActivity"
        android:label="Get your S#!T together">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    </application>

</manifest>